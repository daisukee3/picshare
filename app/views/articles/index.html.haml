.container
  .camera_icon
    = image_tag 'photo-camera (1).png'
  - @articles.each do |article|
    .card
      .card_top
        .card_user_avatar
          = image_tag current_user.avatar_image
        .card_top_element
          .card_user_name
            = current_user.account
          .card_user_post_time
            3 hours ago
      .card_content
        .card_image
          = image_tag 'Rectangle (7).png', :class => "card_image_individual"
          = image_tag 'Rectangle (8).png', :class => "card_image_individual"
          = image_tag 'Rectangle (9).png', :class => "card_image_individual"
        .card_option
          .card_heart
            = image_tag 'Vector (1).png', :class => "card_option_individual"
          .card_do_comment
            = image_tag 'Vector (2).png', :class => "card_option_individual"
          .card_share
            = image_tag 'Vector (3).png', :class => "card_option_individual"
        .card_detail
          .card_context_user_name
            = current_user.account
          .card_context
            = article.content

